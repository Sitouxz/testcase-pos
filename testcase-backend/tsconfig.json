{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"] // Ensure Node types are included
  },
  "include": ["app/**/*"], // Adjust according to your project structure
  "exclude": ["node_modules"],
  "files": ["server.ts"] // Specify the input file(s) here
}
